# A globally understandable config for IDEs and editors.
# For more information about this file, see: http://EditorConfig.org

# top-most EditorConfig file
root = true

# For all files.
[*]
# Unix-style new lines.
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation for Python files.
[*.py]
indent_style = space
indent_size = 4

